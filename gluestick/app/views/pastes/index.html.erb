<div class="navbar navbar-fixed-top">
    <div class="navbar-inner">
        <div class="container">
            <a class="brand" href="#">Gluestick</a>
            <div class="nav-collapse">
                <ul class="nav">
                    <li><a href="https://github.com/mhuckaby/gluestick">About</a></li>
                </ul>
            </div>
        </div>
    </div>
</div>
<div class="container">
    <div class="container-fluid">
        <div class="row-fluid">
            <div class="span3">
                <div class="well sidebar-nav">
                    <ul class="nav nav-list">
                        <li class="nav-header">Pastes</li>
						<% @pastes.each do |paste| %>
                        <li>
							<span>
								<span class="label label-warning">&nbsp&nbsp</span>
									<a href="#" onclick='jqLinkTo(<%=paste.id%>)'><span class="" style="font-size:9pt;padding-top:0px;">04-MAY-2012, 15:00:01</span></a>
                                </span>
							</span>
                        </li>
						<% end %>									
						<!--
						<span class="label label-success">&nbsp&nbsp</span>
									<span class="label label-default">&nbsp&nbsp</span>
									<span class="label label-important">&nbsp&nbsp</span>
									<span class="label label-info">&nbsp&nbsp</span>
									<span class="label label-inverse">&nbsp&nbsp</span>
						-->
                    </ul>
                </div>
            </div>
       <%= form_for @paste do |f| %>
     		<div class="span9">
                <div class="well">					
    				<%= f.text_area(:content, :rows=>25, :cols=>210, :class=>'pasteArea span12') %>
                    <div class="offset7">
						<%= submit_tag("Paste", :class => "btn") %>
                    </div>
                </div>
            </div>
        </div>
		<% end %>
    </div>
</div>